---
export interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

<style lang="scss">
	@import './../styles/variables';

	time[datetime] {
		font-style: normal;
		color: $light;
		opacity: 0.5;
		flex: 0;
	}
</style>