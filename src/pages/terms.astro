---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';

import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SITE_KEYWORDS } from '../consts';

import { getEntry,  } from 'astro:content';

const terms = await getEntry('legal', 'terms');
const { Content } = await terms.render();
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title='Privacy Policy' description={SITE_DESCRIPTION} keywords={SITE_KEYWORDS} />
	</head>
	<body>
		<div class="container">
			<Header title={SITE_TITLE} />
			<article class="article-landing">
				<Content />
			</article>
			<Footer />
		</div>		
	</body>
</html>

<style lang="scss">
	@import './../styles/typography.scss';
	@import './../styles/variables.scss';

	.article-landing {
		padding-top: 2rem;
		gap: 2rem;
		display: flex;
		flex-direction: column;

		h1 {
			text-align: center;
			max-width: 800px;
			margin: 0 auto;
			font-size: 5rem;
			line-height: 1.1;
		}

		h2 {
			img {
				display: inline-block;
				margin: 0;
				opacity: 0.5;
			}
		}

		.intro {
			text-align: center;
			opacity: 0.8;
			margin: 0 auto;
			max-width: 400px;
		}

		a.button {
			align-self: center;
		}

		h1, h2, h3 {
			margin-bottom: 0;
		}

		p {
			margin-bottom: 0;
			max-width: 760px;

			&.small {
				font-size: 1.2rem;
			}
		}

		ul {
			padding-left: 0;

			li {
				padding-left: 0;
				list-style-type: none;
			}
		}

		img, video {
			border-radius: 6px;
		}

		.flex {
			display: flex;
			justify-content: space-between;
			gap: 30px;

			h3, p {
				font-size: 1.2rem;
			}

			h3 {
				margin-bottom: 0.5rem;
				display: flex;
				align-items: center;

				img {
					display: inline-block;
					margin: 0 10px 0 0;
				}
			}
		}

		.testimonials {
			display: flex;
			gap: 11px;
			margin-bottom: 3px;

			li {
				background: rgba(255,255,255,0.02);
    		border: 1px solid rgba(255,255,255,0.08);
				padding: 20px;
				border-radius: 6px;

				h3 {
					display: flex;
					align-items: center;
					gap: 10px;
					margin-top: 0;
					margin-bottom: 1rem;
					font-size: 1rem;
					font-weight: 500;

					img {
						width: 30px;
						height: 30px;
						border-radius: 50%;
						margin: 0;
					}
				}

				p {
					font-size: 1rem;
					line-height: 1.5;
				}
			}
		}

		.timeline {
			position: relative;
			margin-left: 17px;

			&:before {
				content: "";
				top: 15px;
				position: absolute;
				left: -11px;
				bottom: 85px;
				width: 0.5px;
				background: $highlight;
				opacity: 0.2;
			}
		
			li {
				list-style-type: disc;
				padding-bottom: 2rem;
				padding-left: 1rem;

				&::marker {
					color: $highlight;
				}

				time {
					opacity: 0.7;
					margin-bottom: 0.3rem;
					display: block;
				}
			}
		}
	}
</style>